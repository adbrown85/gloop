# @configure_input@

# Package
package      := @PACKAGE_NAME@
version      := @PACKAGE_VERSION@
major        := @PACKAGE_MAJOR_VERSION@
minor        := @PACKAGE_MINOR_VERSION@
tarname      := @PACKAGE_TARNAME@

# Directories
prefix       := @prefix@
exec_prefix  := @exec_prefix@
bindir       := @bindir@
libdir       := @libdir@
includedir   := @includedir@
srcdir       := @srcdir@
builddir     := build
VPATH        := $(srcdir) $(srcdir)/$(tarname) $(builddir)
pkgcfgdir    := $(libdir)/pkgconfig

# Tools
CXX          := @CXX@
INSTALL      := @INSTALL@

# Compiler options
CPPFLAGS     := @CPPFLAGS@
CXXFLAGS     := @CXXFLAGS@
INCLUDES     := -I$(srcdir)/
DEFS         := @DEFS@
DEPS_CFLAGS  := @DEPS_CFLAGS@
CXXOPTS      := $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) $(DEFS) $(DEPS_CFLAGS)

# Linker options
LIBS         := @LIBS@
LDFLAGS      := @LDFLAGS@
DEPS_LIBS    := @DEPS_LIBS@
LDOPTS       := $(LDFLAGS) $(LIBS) $(DEPS_LIBS)

# Files
sources      := ${wildcard $(srcdir)/$(tarname)/*.cpp}
headers      := ${subst .cpp,.hpp,$(sources)}
objects      := ${notdir ${subst .cpp,.lo,$(sources)}}
fixtures     := ${wildcard $(srcdir)/$(tarname)/*.cxx}
tests        := ${notdir ${subst .cxx,,$(fixtures)}}
depends      := ${subst .lo,.d,$(objects)} ${addsuffix .d,$(tests)}
library      := lib$(tarname)-$(major).la
pkgcfgfile   := $(tarname)-$(major).pc

# Interface
.PHONY: all clean distclean maintainer-clean
.DEFAULT: all
all: objects tests library
clean:
	$(RM) -r $(builddir)
distclean: clean
	$(RM) config.h
	$(RM) config.log
	$(RM) config.status
	$(RM) Makefile
	$(RM) $(pkgcfgfile)
maintainer-clean: distclean
	$(RM) aclocal.m4
	$(RM) -r autom4te.cache
	$(RM) autoscan.log
	$(RM) configure.scan
	$(RM) config.guess
	$(RM) config.h.in
	$(RM) config.h.in~
	$(RM) config.sub
	$(RM) configure
	$(RM) install-sh
	$(RM) libtool
	$(RM) ltmain.sh

# Objects
.PHONY: objects
objects: $(objects)
%.lo: %.cpp %.hpp
	@echo "  CXX   $@"
	@libtool --mode=compile --quiet \
            $(CXX) \
            -o $(builddir)/$@ \
            $(CXXOPTS) \
            -c \
            $<

# Tests
.PHONY: tests
tests: $(tests)
%: %.cxx
	@echo "  CXX   $@"
	@libtool --mode=link --quiet \
            $(CXX) \
            -o $(builddir)/$@ \
            $(CXXOPTS) $(LDOPTS) \
            $< \
            ${addprefix $(builddir)/,${notdir ${filter %.lo,$^}}}

# Library
.PHONY: library
library: $(library)
$(library): $(objects)
	@echo "  LD    $@"
	@libtool --mode=link --quiet \
            $(CXX) \
            -o $(builddir)/$(library) \
            $(LDOPTS) \
            -rpath $(libdir) \
            -version-info $(minor):0:0 \
            ${addprefix $(builddir)/,$(objects)}

# Installation
.PHONY: install uninstall
install: all
	@echo "  INSTALL $(libdir)/$(library)"
	@$(INSTALL) -d $(libdir)
	@libtool --mode=install --quiet \
            $(INSTALL) $(builddir)/$(library) $(libdir)
	@libtool --mode=finish -n --quiet $(libdir)
	@echo "  INSTALL $(includedir)/$(tarname)-$(major)"
	@$(INSTALL) -d $(includedir)/$(tarname)-$(major)/$(tarname)
	@$(INSTALL) -m 0644 $(tarname)/common.h $(includedir)/$(tarname)-$(major)/$(tarname)
	@$(INSTALL) -m 0644 $(headers) $(includedir)/$(tarname)-$(major)/$(tarname)
	@echo "  INSTALL $(pkgcfgdir)/$(pkgcfgfile)"
	@$(INSTALL) -d $(pkgcfgdir)
	@$(INSTALL) -m 0644 $(pkgcfgfile) $(pkgcfgdir)
uninstall:
	@echo "  UNINSTALL $(libdir)/$(library)"
	@libtool --mode=uninstall $(RM) $(library)
	@echo "  UNINSTALL $(includedir)/$(tarname)-$(major)"
	@$(RM) -r $(includedir)/$(tarname)-$(major)
	@echo "  UNINSTALL $(pkgcfgdir)/$(pkgcfgfile)"
	@$(RM) $(pkgcfgdir)/$(pkgcfgfile)

# Dependencies
.PHONY: depends
depends: $(depends)
$(builddir)/%.d: %.hpp
	@echo "  GEN   $@"
	@$(INSTALL) -d $(builddir)
	@$(CXX) \
            $(CXXOPTS) \
            -MM \
            -MP \
            ${subst .hpp,.cpp,$<} \
            | sed 's|[[:alnum:]/]*/||g' \
            | sed 's|\([[:alnum:]]*\)\.o|\1.lo build/\1.d|' \
            > $@
$(builddir)/%.d: %.cxx
	@echo "  GEN   $@"
	@$(INSTALL) -d $(builddir)
	@$(CXX) \
            $(CXXOPTS) \
            -MM \
            -MP \
            $< \
            | sed 's|[[:alnum:]/]*/||g' \
            | sed 's|\([[:alnum:]]*\)\.o|\1 build/\1.d|' \
            | sed 's|\.hpp|\.lo|g' \
            > $@
ifneq (clean,${findstring clean,$(MAKECMDGOALS)})
  -include ${addprefix $(builddir)/,$(depends)}
endif
